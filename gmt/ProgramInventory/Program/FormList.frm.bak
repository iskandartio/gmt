Dim Unloaded As Boolean


Sub LoadMe(ByVal tOptions As String, ByVal tSQLs As String, ByVal tFilterCaptions As String, ByVal tFilters As String, ByVal tFilterWidths As String, ByVal tFilterTypes As String, ByVal tHeaders As String, ByVal tWidths As String, ByVal tFormats As String, tForm As Form, Optional ByVal tLastQuery As String = "", Optional ByVal tRetIndex As String = "0")
On Error GoTo err
    Dim tIdx As Byte
    mLastQuery = tLastQuery
    mRetIndex = tRetIndex
    a = Split(tOptions, "@")
    b = Split(tSQLs, "@")
    Options(0).Caption = a(0)
    FontSize = Options(0).FontSize
    Options(0).Width = TextWidth(a(0)) + 500
    Options(0).Tag = b(0)
    Options(0).TabIndex = 0
    tIdx = 0
    For i = 1 To Options.Count - 1
        Unload Options(i)
    Next
    For i = 1 To UBound(a)
        Load Options(i)
        Options(i).Visible = True
        Options(i).Caption = a(i)
        Options(i).Tag = b(i)
        Options(i).Left = Options(i - 1).Left + Options(i - 1).Width
        Options(i).Width = TextWidth(a(i)) + 500
        tIdx = tIdx + 1
        Options(i).TabIndex = tIdx
    Next
    a = Split(tFilterCaptions, "@")
    b = Split(tFilters, "@")
    c = Split(tFilterWidths, "@")
    d = Split(tFilterTypes, "@")
    ReDim mFilterTypes(UBound(d))
    mFilterTypes(0) = d(0)
    SetTextType d(0), 0
    Label(0).Caption = a(0)
    IText(0).Tag = b(0)
    IText(0).Width = c(0)
    tIdx = tIdx + 1
    IText(0).TabIndex = tIdx
    For i = 1 To Label.Count - 1
        Unload Label(i)
    Next
    For i = 1 To UBound(a)
        mFilterTypes(i) = d(i)
        Load Label(i)
        Label(i).Caption = a(i)
        Label(i).Left = Label(i - 1).Left + c(i - 1) + 50
        Label(i).Visible = True
        Load IText(i)
        SetTextType d(i), i
        tIdx = tIdx + 1
        IText(i).TabIndex = tIdx
        IText(i).Left = Label(i).Left
        IText(i).Tag = b(i)
        IText(i).Width = c(i)
        IText(i).Visible = True
    Next
    a = Split(tHeaders, "@")
    b = Split(tWidths, "@")
    c = Split(tFormats, "@")
    ReDim mFormats(UBound(a))
    TDBGrid1.TabIndex = tIdx + 1
    While TDBGrid1.Columns.Count <> 0
        TDBGrid1.Columns.Remove 0
    Wend
    w = 0
    For i = 0 To UBound(a)
        TDBGrid1.Columns.Add(i).Visible = True
        TDBGrid1.Columns(i).Caption = a(i)
        TDBGrid1.Columns(i).Width = CLng(b(i))
        w = w + TDBGrid1.Columns(i).Width
        mFormats(i) = c(i)
        With TDBGrid1.Columns(i)
            If c(i) = "Integer" Then
                .Alignment = dbgRight
            ElseIf c(i) = "Decimal" Then
                .Alignment = dbgRight
                .NumberFormat = "Standard"
            ElseIf c(i) = "NoCents" Then
                .Alignment = dbgRight
                .NumberFormat = "FormatText Event"
            ElseIf c(i) = "Date" Then
                .NumberFormat = "FormatText Event"
            ElseIf c(i) = "YesNo" Then
                .Alignment = dbgCenter
                .ValueItems.Presentation = dbgCheckBox
            ElseIf Left(c(i), 8) = "Zerofill" Then
                .NumberFormat = "FormatText Event"
            End If
        End With
    Next
    Options(0).Value = False
    Options(0).Value = True
    For i = 0 To TDBGrid1.Columns.Count - 1
        TDBGrid1.Columns(i).ButtonHeader = True
    Next
    ReDim m_order(TDBGrid1.Columns.Count - 1)
    Set mForm = tForm
err:
    Show , tForm
End Sub

Private Sub SetTextType(ByVal tType As String, ByVal tIndex As Integer)
    IText(tIndex).DataType = tString
    If tType = "Integer" Then
        IText(tIndex).DataType = 1
    ElseIf tType = "Currency" Then
        IText(tIndex).DataType = 2
    ElseIf tType = "Date" Then
        IText(tIndex).DataType = 3
    End If
End Sub

Private Sub Form_Load()
    Caption = Caption & "---" & pTipe
    Unloaded = False
End Sub


Private Sub IText_KeyDown(Index As Integer, KeyCode As Integer, Shift As Integer)
    If KeyCode = 13 Then
        Dim i As Integer
        For i = 0 To Options.Count - 1
            If Options(i).Value = True Then Exit For
        Next
        Options_Click i
        IText(Index).Cancel = True
    End If
End Sub

Private Sub Options_Click(Index As Integer)
    a = Options(Index).Tag & MyFilter & mLastQuery
    query a
    x.ReDim 0, 0, 0, TDBGrid1.Columns.Count - 1
    x.DeleteRows 0
    Set TDBGrid1.Array = x
    If RS.RecordCount > 0 Then x.LoadRows RS.GetRows
    TDBGrid1.Rebind
End Sub

Private Function MyFilter()
    MyFilter = ""
    For i = 0 To Label.Count - 1
        If mFilterTypes(i) = "String" Then
            If IText(i) <> "" Then MyFilter = MyFilter & " and " & IText(i).Tag & " like '" & IText(i) & "%'"
        ElseIf mFilterTypes(i) = "Date" Then
            If cD(IText(i)) <> "A" Then MyFilter = MyFilter & " and " & IText(i).Tag & "=" & cD(IText(i))
        ElseIf mFilterTypes(i) = "StringLike" Then
            If IText(i) <> "" Then MyFilter = MyFilter & " and " & IText(i).Tag & " like '%" & IText(i) & "%'"
        Else
            If IText(i) <> "" Then MyFilter = MyFilter & " and " & IText(i).Tag & "=" & IText(i)
        End If
    Next
End Function

Private Sub TDBGrid1_FormatText(ByVal ColIndex As Integer, Value As Variant, Bookmark As Variant)
On Error GoTo err
    If mFormats(ColIndex) = "Date" Then
        Value = cTanggal(Value)
    ElseIf Left(mFormats(ColIndex), 8) = "Zerofill" Then
        Value = zerofill(Value, Mid(mFormats(ColIndex), 9))
    End If
    Exit Sub
err:
End Sub

Private Sub Form_Resize()
On Error Resume Next
    TDBGrid1.Height = ScaleHeight - TDBGrid1.Top - 100
    TDBGrid1.Width = ScaleWidth - TDBGrid1.Left - 100
End Sub


Private Sub TDBGrid1_HeadClick(ByVal ColIndex As Integer)
    Dim TypeX As XTYPE
    If mFormats(ColIndex) = "String" Then TypeX = XTYPE_STRING Else TypeX = XTYPE_NUMBER
    x.QuickSort 0, x.UpperBound(1), ColIndex, m_order(ColIndex), TypeX
    TDBGrid1.Rebind
    If m_order(ColIndex) = XORDER_ASCEND Then
        m_order(ColIndex) = XORDER_DESCEND
    Else
        m_order(ColIndex) = XORDER_ASCEND
    End If
End Sub

Private Sub TDBGrid1_KeyDown(KeyCode As Integer, Shift As Integer)
On Error Resume Next
    If KeyCode = 13 Then
        b = Split(mRetIndex, "@")
        a = ""
        For i = 0 To UBound(b)
            a = a & "@" & TDBGrid1.Columns(CLng(b(i))).Value
        Next
        mForm.GetResult Mid(a, 2)
        Unloaded = True
        IText(0).SetFocus
    ElseIf KeyCode = 120 Then
        b = Split(mRetIndex, "@")
        a = ""
        For i = 0 To UBound(b)
            a = a & "@" & TDBGrid1.Columns(CLng(b(i))).Value
        Next
        mForm.GetResult Mid(a, 2)
    End If
End Sub

Private Sub TDBGrid1_LostFocus()
    If Unloaded Then Unload Me
End Sub


